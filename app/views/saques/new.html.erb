<h1>Realizar Saque</h1>

<% if @saldo_atual %>
  <p>Seu saldo atual Ã©: <strong><%= number_to_currency(@saldo_atual, unit: "R$", separator: ",", delimiter: ".") %></strong></p>
<% end %>

<%# Exibe mensagens de erro flash, se houver %>
<% if flash.now[:alert] %>
  <p style="color: red;"><%= flash.now[:alert] %></p>
<% end %>

<%= form_with(url: realizar_saque_path, method: :post, local: true, data: { turbo: false }) do |form| %>
  <div class="field">
    <%= form.label :valor_saque, "Valor do Saque (R$)" %><br>
    <%= form.text_field :valor_saque, placeholder: "Ex: 50.00 ou 50,00" %>
  </div>

  <div class="actions">
    <%= form.submit "Sacar" %>
  </div>
<% end %>

<hr>
